extends layout

block content
  html 
  link(rel='stylesheet', href='/stylesheets/overview.css')

  // div for popup activated by the popup button //
  div.popup-container-fixed
    div.popup-box-fixed
      h3 Edit income / expenses 
      p Enter the amount of your fixed monthly incomes/expenses. For example, salary or rent.
      p Use . for decimals.
      p Edit fixed monthly income: 
        input.income-fixed(type='number')
      p Edit fixed monthly expense: 
        input.expense-fixed(type='number')
      p Edit monthly saving goal:
        input.savings-fixed(type='number')
      div.buttons
        button.close-btn-fixed CLOSE
        button.save-btn-fixed SAVE
  
  div.popup-container-income
    div.popup-box-income
      h3 Enter a single income
      p Use . for decimals
      //p Add category: 
        select.dropdown-income
      p Enter name (e.g. Yard work, Bike sale): 
        input.name-income
      p Enter value:
        input.value-income(type='number')
      div.buttons
        button.close-btn-income CLOSE
        button.save-btn-income SAVE

  div.popup-container-expense
    div.popup-box-expense
      h3 Enter a single expense
      p Use . for decimals
      p Choose category: 
        select.dropdown-expense
      p Enter name (e.g. Coffee in the park): 
        input.name-expense
      p Enter value:
        input.value-expense(type='number')
      div.buttons
        button.close-btn-expense CLOSE
        button.save-btn-expense SAVE
  
  div.month-navigation
    button#prevMonth(data-text="←") 
    span#currentMonth
    button#nextMonth(data-text="→")

  dialog().add-category-dialog
    h3 Create category
    p Enter category name (e.g. Food, Party): 
      input.category-name
    p Enter monthly spending limit:
      input.category-goal(type='number')
    p Choose color: 
      input.category-color(type="color")
    div.buttons
      button.close-btn-category CLOSE 
      button.save-btn-category SAVE

  dialog().edit-category-dialog
    h3 Edit category
    p Choose category: 
      select.dropdown-edit
      button.delete-btn-category-edit Delete
    p Edit name
      input.name-edit(style="float: right")
    p Edit limit
      input.goal-edit(style="float: right", type='number')
    div.buttons
      button.close-btn-category-edit CLOSE 
      button.save-btn-category-edit SAVE
    
  // Button to skip tutorial
  div.button.skip-tutorial-btn Skip Tutorial
  p.progress-label Tutorial Progress
  div.progress-bar
    div.progress-bar-fill(style="width: 0%")
  main
    div.all
      h1= title
      div.row
        // BIG CIRCLE
        div.column
          h2 Primary budget overview
          div.pie-line
            div.pie.animate(style="--w: 300px")
              p.total 
              p.spent 
              p.left 
              p.savings
          div
          button.show-popup-fixed Set-up fixed income and expenses
        // CATEGORIES
        div.column
          h2 Categories
          div.categories
            button.add-circle(style="margin-bottom: 7%;") +
          button.show-edit-categories Edit/Delete category
        // HISTORY
        div.column
          h2 Income and expense history
          div.history
            table.styled-table
          button.show-popup-income Add income
          button.show-popup-expense Add expense
  script.
    let username = "#{username}";
  script(src="/javascripts/overviewScripts.js")

